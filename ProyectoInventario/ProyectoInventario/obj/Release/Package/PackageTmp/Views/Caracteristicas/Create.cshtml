@model AccesoDatos.Modelo.Caracteristicas
@{
    ViewBag.Title = "Nueva Caracteristica";
}

<div class="well well-sm text-primary text-center">
    Ingrese la información necesaria para crear una nueva Característica
</div>

@*@Html.EditorForModel()*@
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.TipoCaracteristicas.TipoCaracteristica, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownList("idTipoCaracteristica", ViewBag.ListaTipoCaracteristicas as SelectList, "Seleccione una Característica", htmlAttributes: new { @class = "form-control", @required = "required" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Caracteristica, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Caracteristica, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessage("caracteristica_agregar", null, new { @class="label label-danger"})
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </fieldset>

        <div class="form-actions col-md-offset-2">
            <button class="btn btn-success" type="submit" name="accion" value="guardar_caracteristica"> Guardar</button> 
            <a class="btn btn-primary" href="Index"> Cancelar </a>
            @*@Html.ActionLink("Regresar al Listado", "Index")*@
        </div>
    </div>

}
<div class="text-primary text-success text-center">
    @ViewBag.MensajeExito;
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MensajeError;
</div>
