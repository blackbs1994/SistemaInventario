@model AccesoDatos.Modelo.TipoProductos
@{
    ViewBag.Title = "Delete Tipo de Producto";
}

<div class="well well-sm text-primary text-center">
    @ViewBag.MensajeInicio
</div>

@*@Html.EditorForModel()*@
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            <div class="form-group">
                @Html.HiddenFor(model => model.idTipoProducto)
                @Html.LabelFor(model => model.CatalogoProductos.CatalogoProducto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownList("idCatalogoProducto", ViewBag.ListaCatalogoProductos as SelectList, "Seleccione una Categoria", htmlAttributes: new { @class = "form-control", @disabled="disabled" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TipoProducto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.TipoProducto, new { htmlAttributes = new { @class = "form-control", @readonly= "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
        </fieldset>

        <div class="form-actions col-md-offset-2">
            <input class="btn btn-primary" type="submit" name="btnguardar" value="Eliminar" />|
            @Html.ActionLink("Regresar al Listado", "Index")
        </div>
    </div>

}
<div class="text-primary text-success text-center">
    @ViewBag.MensajeExito;
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MensajeError;
</div>
