@model AccesoDatos.Modelo.CatalogoProductos
@{
    ViewBag.Title = "Actualizar Catalogo Productos";
}


<div class="well well-sm text-primary text-center">
    @ViewBag.MensajeInicio
</div>

@*@Html.EditorForModel()*@
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <fieldset>
            @Html.HiddenFor(model => model.idCatalogoProducto)
            <div class="form-group">
                @Html.LabelFor(model => model.CatalogoProducto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.CatalogoProducto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </fieldset>

        <div class="form-actions col-md-offset-2">
            <button class="btn btn-success" type="submit" name="accion" value="guardar_caracteristica"> Guardar</button>
            <a class="btn btn-primary" href="~/CatalogoProducto/Index"> Cancelar </a>            
            @*@Html.ActionLink("Regresar al Listado", "Index")*@
        </div>
    </div>

}
<div class="text-primary text-success text-center">
    @ViewBag.MensajeExito;
</div>
<div class="text-primary text-danger text-center">
    @ViewBag.MensajeError;
</div>