@model AccesoDatos.Modelo.Usuarios

@{
    ViewBag.Title = "Nuevo Usuario";
    Layout = "";
}
@{
    //Inicio Activar
    List<SelectListItem> activar = new List<SelectListItem>();
    activar.Add(new SelectListItem
    {
        Text = "Si",
        Value = Convert.ToString(1)
    });
    activar.Add(new SelectListItem
    {
        Text = "No",
        Value = Convert.ToString(0)
    });

    //Fin Activar
}
@if (Model != null)
{
    <div class="row">

        @Html.HiddenFor(model => model.idUsuario)

        <div class="col-md-2">
            @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

        </div>

        <div class="col-md-2">
            @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>

        <div class="col-md-2 dropdown">
            @Html.LabelFor(model => model.Ubicaciones.Ubicacion, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.Ubicaciones.idUbicacion, ViewBag.ListaUbicaciones as SelectList, "Seleccione una Categoria", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="col-md-2 dropdown">
            @Html.LabelFor(model => model.Departamentos.Departamento, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.Departamentos.idDepartamento, ViewBag.ListaDepartamentos as SelectList, "Seleccione una Categoria", htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="alert alert-danger">
                No se encontró ningun usuario que corresponda al número ingresado. 
            </div>
        </div>
    </div>
}